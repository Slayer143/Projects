<Page x:Class="Furniture.Pages.Customer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Furniture.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="699" d:DesignWidth="1400"
      x:Name="customer" Title="Customer`s page" Background="White">

    <Grid>
        <Button BorderThickness="3" Background="LightGray" Foreground="Black" FontSize="30" Content="Выход" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top" Width="130" Height="65" Click="ExitButtonPressed"/>
        <TextBlock x:Name="pageName" Background="Black" Foreground="White" TextAlignment="Center" FontSize="15" HorizontalAlignment="Left" Margin="582,0,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="45" Width="220" RenderTransformOrigin="0.5,0.5"/>
        <Button FontSize="15" BorderThickness="4" Background="LightGray" Content="Добавить заказ" Margin="500,195,500,460" Click="MakeNewButtonPressed"/>
        <Button FontSize="15" BorderThickness="4" Background="LightGray" Content="Мои заказы" Margin="500,371,500,284" Click="MyOrdersButtonPressed"/>
    </Grid>
</Page>