<Window x:Class="CybersportApp.DialogueStartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CybersportApp"
        mc:Ignorable="d"
        Title="DialogueStartWindow" Height="250" Width="400" Background="Transparent" ResizeMode="NoResize">
    
    <Grid>
        <TextBox Text="{Binding Message}" Background="Transparent" Foreground="Orchid" BorderThickness="2" BorderBrush="DarkOrchid" FontSize="40" TextWrapping="Wrap" Grid.ColumnSpan="2" Margin="10,10,9.6,10.4"/>
        <Button Content="Deny" Foreground="Orchid" FontSize="40" BorderBrush="DarkOrchid" BorderThickness="2" Background="Transparent" Command="{Binding Deny}" Margin="10,9.6,9.8,10" Grid.Row="1"/>
        <Button Content="Send" Foreground="Orchid" FontSize="40" BorderBrush="DarkOrchid" BorderThickness="2" Background="Transparent" Command="{Binding Send}" Margin="10.2,9.6,9.6,10" Grid.Column="1" Grid.Row="1"/>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
