<Window x:Class="CybersportApp.DeleteProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CybersportApp"
        mc:Ignorable="d"
        Title="DeleteProfileWindow" Height="331.038" Width="472.686" ResizeMode="NoResize">
    <Grid Background="Black">
        <TextBlock Text="Are you sure? That action will also close the program" Background="Transparent" TextWrapping="Wrap" TextAlignment="Center" FontSize="40" Foreground="MediumOrchid" Margin="10,10,9.6,104.4"/>
        <Button Content="Yes" Command="{Binding Delete}" Background="Transparent" FontSize="40" Foreground="MediumOrchid" BorderBrush="MediumOrchid" BorderThickness="2" Margin="10,201,305.4,10.6"/>
        <Button Content="No" Command="{Binding Abort}" Background="Transparent" FontSize="40" Foreground="MediumOrchid" BorderBrush="MediumOrchid" BorderThickness="2" Margin="305,202,10.4,9.6"/>
    </Grid>
</Window>
